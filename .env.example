# SomaStack Environment Configuration
# Copy to .env and customize

# ==========================================================================
# ENVIRONMENT
# ==========================================================================
ENVIRONMENT=development

# ==========================================================================
# DATABASE
# ==========================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=somastack2024
POSTGRES_DB=somaagent
POSTGRES_PORT=5432

# ==========================================================================
# CACHE
# ==========================================================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ==========================================================================
# MESSAGE BROKER
# ==========================================================================
KAFKA_PORT=9092
KAFKA_CLUSTER_ID=soma-kraft-cluster

# ==========================================================================
# VECTOR DATABASE
# ==========================================================================
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MILVUS_PORT=19530
MILVUS_GRPC_PORT=9091

# ==========================================================================
# AUTHORIZATION
# ==========================================================================
SPICEDB_TOKEN=somastack-spicedb-token
SPICEDB_GRPC_PORT=50051
SPICEDB_HTTP_PORT=8443
OPA_PORT=8181

# ==========================================================================
# OBSERVABILITY
# ==========================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=somastack

# ==========================================================================
# JWT / AUTH
# ==========================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ==========================================================================
# LLM PROVIDERS
# ==========================================================================
OPENAI_API_KEY=
GROQ_API_KEY=
ANTHROPIC_API_KEY=

# ==========================================================================
# CONFIDENCE SCORING
# ==========================================================================
CONFIDENCE_ENABLED=true
CONFIDENCE_AGGREGATION=average
CONFIDENCE_MIN_ACCEPTANCE=0.5
CONFIDENCE_ON_LOW=flag
CONFIDENCE_TREAT_NULL_AS_LOW=true
CONFIDENCE_PRECISION_DECIMALS=3

# ==========================================================================
# GOOGLE OAUTH (for SSO)
# ==========================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback
