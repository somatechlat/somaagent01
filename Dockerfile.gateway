# ============================================================================
# SomaAgent01 Gateway - Lightweight Django ASGI Server
# ============================================================================
#
# Purpose: Pure Django/Ninja API gateway
# Size: ~450MB (Django + deps)
# Services: somaagent-gateway
# Build: make build-gateway
#
# NO ML, NO ffmpeg, NO tesseract - just Django
# ============================================================================

# ============================================================================
# STAGE 1: Builder - Compile Dependencies
# ============================================================================
FROM python:3.11-slim AS builder

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    VENV_PATH="/opt/venv"

# Minimal build deps - no ML compilation needed
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Create venv
RUN python -m venv "${VENV_PATH}" && \
    "${VENV_PATH}/bin/pip" install --upgrade pip setuptools wheel

WORKDIR /opt/build

# Copy ALL requirements files
COPY requirements-core.txt requirements-gateway.txt ./

# Install lightweight Django deps ONLY
RUN "${VENV_PATH}/bin/pip" install --no-cache-dir -r requirements-gateway.txt

# ============================================================================
# STAGE 2: Runtime - Minimal Django Image
# ============================================================================
FROM python:3.11-slim AS runtime

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    VENV_PATH="/opt/venv" \
    DJANGO_SETTINGS_MODULE="services.gateway.settings"

ENV PATH="${VENV_PATH}/bin:$PATH" \
    PYTHONPATH=/app

# MINIMAL runtime deps - just libpq for PostgreSQL
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    libpq5 \
    && rm -rf /var/lib/apt/lists/*

# Copy venv from builder
COPY --from=builder /opt/venv /opt/venv

WORKDIR /app

# Copy ONLY what gateway needs (not entire repo)
COPY admin/ /app/admin/
COPY services/gateway/ /app/services/gateway/
COPY services/common/ /app/services/common/
COPY python/ /app/python/
COPY manage.py sitecustomize.py /app/
COPY scripts/entrypoints/ /app/scripts/entrypoints/

# Create non-root user
RUN useradd -m -u 1000 agent && \
    chown -R agent:agent /app && \
    chmod +x /app/scripts/entrypoints/*.sh

USER agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8010/api/health/ || exit 1

ENTRYPOINT ["/app/scripts/entrypoints/django-entrypoint.sh"]
CMD ["python", "-m", "services.gateway.main"]
